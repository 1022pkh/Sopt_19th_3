<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.semi.sopt_19th_3.MainActivity">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="벌써 안드로이드 3차 세미나입니다!!"
        android:textSize="20dp"
        android:textAlignment="center"/>



    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ListView는 정말 많이 사용해요!!!\n복습은 필수입니다 ㅎㅎ"
        android:textSize="20dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/basicList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기본적인 ListView"/>

        <Button
            android:id="@+id/customList"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom ListView"/>

        <Button
            android:id="@+id/upgradeList"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="심화 ListView(필터)"/>


        <Button
            android:id="@+id/upgradeList2"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="심화 ListView(추가)"/>

    </LinearLayout>


</LinearLayout>
